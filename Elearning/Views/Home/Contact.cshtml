
@{
    ViewData["Title"] = "İletişim";
}

<link type="text/css" href="~/css/Contact.css" />

<div class="py-5 bg-cover" data-dark-overlay="6">
    <div class="container">
        <h2 class="text-white">
            İletişim
        </h2>
        <ol class="breadcrumb breadcrumb-double-angle text-white bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item">İletişim</li>
        </ol>
    </div>
</div>



<div class="py-5 shadow-v2 position-relative">
    <div class="container">
        <div class="row">

            <div class="col-lg-4 col-md-6 mt-4">
                <div class="media">
                    <span class="iconbox iconbox-md bg-primary text-white"><i class="ti-mobile"></i></span>
                    <div class="media-body ml-3">
                        <h5 class="mb-0">(0312) 232 01 26</h5>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mt-4">
                <div class="media">
                    <span class="iconbox iconbox-md bg-primary text-white"><i class="ti-email"></i></span>
                    <div class="media-body ml-3">
                        <a href="mailto:akcigersagligi@gmail.com" class="h5">akcigersagligi@gmail.com</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mt-4">
                <div class="media">
                    <span class="iconbox iconbox-md bg-primary text-white"><i class="ti-location-pin"></i></span>
                    <div class="media-body ml-3">
                        <h5 class="mb-0">Çankaya/ANKARA</h5>
                        <p>İlkiz Sokak No: 17/5 Sıhhiye</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




<section class="padding-y-100 bg-light-v2">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>
                    Bize Yazın
                </h2>
                <div class="width-4rem height-4 bg-primary my-2 mx-auto rounded"></div>
            </div>
            <div class="col-12 text-center">
                <form id="send-contact-form" class="card p-4 p-md-5 shadow-v1">
                    <p class="lead mt-2">
                        Sorun, talep veya görüşlerinizi bize iletin.
                    </p>
                    <div class="row mt-5 mx-0">
                        <div class="col-md-4 mb-4">
                            <input type="text" class="form-control" id="name" placeholder="İsim" required>
                        </div>
                        <div class="col-md-4 mb-4">
                            <input type="email" class="form-control" id="email" placeholder="Email" required>
                        </div>
                        <div class="col-md-4 mb-4">
                            <input type="text" class="form-control" id="subject"  placeholder="Konu" required>
                        </div>
                        <div class="col-12">
                            <textarea type="text" class="form-control" id="message" placeholder="İleti" rows="7" required></textarea>
                            <button id="send" class="btn btn-primary mt-4">Gönder</button>
                        </div>
                    </div>
                </form>
                <div class="jumbotron" id="success" style="background-color:#caffb3;display:none">
                    <h5>Mesajınız Gönderildi</h5>
                </div>
            </div>

        </div> <!-- END row-->
    </div> <!-- END container-->
</section>


<div class="mapouter"><div class="gmap_canvas"><iframe width="100%" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=ilkiz%20sokak%2017%2F5&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://ytify.com">video to</a></div>
</div>

@section Scripts{
    <script src="~/js/Contact.js"></script>
 }