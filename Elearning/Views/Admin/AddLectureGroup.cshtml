
@{
    ViewData["Title"] = "Ders Grubu Ekle";
}

    <div class="container">
        <div class="row mt-5">
            <div class="col-12 text-center my-5">
                <h4>
                    @ViewData["Title"]
                </h4>
            </div>
            <div class="col-12 mx-auto">
                <form method="post" enctype="multipart/form-data">
                    <div class="row form-group">
                        <label for="example-text-input" class="col-2 col-form-label text-right courseid">Kurs Id</label>
                        <div class="col-10">
                            <input class="form-control" name="courseid_0" value="@ViewData["courseid"]">
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="example-text-input" class="col-2 col-form-label text-right">Başlık</label>
                        <div class="col-10">
                            <input class="form-control" name="title_0">
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="example-search-input" class="col-2 col-form-label text-right">Sıra</label>
                        <div class="col-10">
                            <input class="form-control" name="row_0">
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="example-password-input" class="col-2 col-form-label text-right">Aktif</label>
                        <div class="col-10">
                            <select class="form-control" name="active_0">
                                <option value="True">Aktif</option>
                                <option value="False">Aktif Değil</option>
                            </select>
                        </div>
                    </div><hr />
                    <input type="hidden" id="counter" name="counter" value="0" />
                    <div id="add">

                    </div>
                    <div>
                        <button type="button" id="btn-add"><i class="fas fa-plus-circle"></i></button>
                    </div>
                    <div class="d-flex justify-content-sm-end">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary text-light m-1"><i class="fas fa-home"></i> Ana Sayfa</a>
                        <button type="submit" class="btn btn-success m-1"><i class="fas fa-save"></i> Kaydet &amp; Devam et</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts{
<script>
    var count = 0;
    $('#btn-add').click(function () {
        count++;
        $('#add').append(`<div class="row form-group">
                        <label for="example-text-input" class="col-2 col-form-label text-right">Başlık</label>
                        <div class="col-10">
                            <input class="form-control" name="title_`+ count +`">
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="example-search-input" class="col-2 col-form-label text-right">Sıra</label>
                        <div class="col-10">
                            <input class="form-control" name="row_`+ count +`">
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="example-password-input" class="col-2 col-form-label text-right">Aktif</label>
                        <div class="col-10">
                            <select class="form-control" name="active_`+ count +`">
                                <option value="True">Aktif</option>
                                <option value="False">Aktif Değil</option>
                            </select>
                        </div>
                    </div><hr>`);
        $('#counter').val(count);
    })
</script>
 }