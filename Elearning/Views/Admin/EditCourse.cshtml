@model Elearning.Models.Course
@{
    ViewData["Title"] = "Kurs Düzenle";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-12 text-center my-5">
            <h4>
                @ViewData["Title"]
            </h4>
        </div>
        <div class="col-12 mx-auto">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CrtDate" />
                <input type="hidden" asp-for="CrtHost" />
                <input type="hidden" asp-for="CrtUsr" />
                <input type="hidden" asp-for="CertificatePath" />
                <input type="hidden" asp-for="Certificate2Path" />
                <input type="hidden" asp-for="PreviewPath" />
                <div class="row form-group">
                    <label for="example-text-input" class="col-2 col-form-label text-right">Başlık</label>
                    <div class="col-10">
                        <input class="form-control" asp-for="Title">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-search-input" class="col-2 col-form-label text-right">Yayıncı</label>
                    <div class="col-10">
                        <input class="form-control" asp-for="Publisher">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-email-input" class="col-2 col-form-label text-right">Açıklama <small class="text-danger">*HTML</small></label>
                    <div class="col-10">
                        <input class="form-control" asp-for="Description">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-url-input" class="col-2 col-form-label text-right">Neler öğreneceksiniz <small class="text-danger">*HTML</small></label>
                    <div class="col-10">
                        <textarea class="form-control" rows="5" asp-for="WhatWillLearn"></textarea>
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-url-input" class="col-2 col-form-label text-right">Kurs İçin Gerekenler <small class="text-danger">*HTML</small></label>
                    <div class="col-10">
                        <textarea class="form-control" rows="5" asp-for="Requirements"></textarea>
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-url-input" class="col-2 col-form-label text-right">Kurs Kimler İçin <small class="text-danger">*HTML</small></label>
                    <div class="col-10">
                        <textarea class="form-control" rows="5" asp-for="WhosFor"></textarea>
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-tel-input" class="col-2 col-form-label text-right">Ücret</label>
                    <div class="col-10">
                        <input class="form-control" asp-for="Price">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-password-input" class="col-2 col-form-label text-right">Aktif</label>
                    <div class="col-10">
                        <select class="form-control" asp-for="Active">
                            <option value="True">Aktif</option>
                            <option value="False">Aktif Değil</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-number-input" class="col-2 col-form-label text-right">Bitirme Süresi</label>
                    <div class="col-10">
                        <input class="form-control" asp-for="CompletionDay">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="example-datetime-local-input" class="col-2 col-form-label text-right">Başarı Oranı</label>
                    <div class="col-10">
                        <input class="form-control" asp-for="SuccessRate">
                    </div>
                </div>
                <span class="text-danger">Sadece değiştirmek istediğiniz dosyayı yükleyin</span>
                <hr />
                <div class="row form-group">
                    <label for="exampleFormControlFile1" class="col-2 col-form-label text-right">Sertifika</label>
                    <div class="col-10">
                        <input type="file" class="form-control-file" name="certificate">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="exampleFormControlFile1" class="col-2 col-form-label text-right">Sertifika 2</label>
                    <div class="col-10">
                        <input type="file" class="form-control-file" name="certificate2">
                    </div>
                </div>

                <div class="row form-group">
                    <label for="exampleFormControlFile1" class="col-2 col-form-label text-right">Kurs Resmi</label>
                    <div class="col-10">
                        <input type="file" class="form-control-file" name="preview">
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary text-light m-1"><i class="fas fa-home"></i> Ana Sayfa</a>
                    <button type="submit" class="btn btn-success m-1"><i class="fas fa-save"></i> Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>