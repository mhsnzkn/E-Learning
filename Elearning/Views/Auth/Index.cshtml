@model Elearning.Models.Dto.UserLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <!-- Title-->
    <title>E-Öğrenme Giriş</title>

    <!-- SEO Meta-->
    <meta name="description" content="Education theme by EchoTheme">
    <meta name="keywords" content="HTML5 Education theme, responsive HTML5 theme, bootstrap 4, Clean Theme">
    <meta name="author" content="education">

    <!-- viewport scale-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">


    <!-- Favicon and Apple Icons-->
    <link rel="icon" type="image/x-icon" href="~/icon.ico">
    <link rel="shortcut icon" href="~/images/logo.png">
    <link rel="apple-touch-icon-precomposed" href="/lib/educati/img/favicon/96x96.png">


    <!--Google fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Maven+Pro:400,500,700%7CWork+Sans:400,500">


    <!-- Icon fonts -->
    <link rel="stylesheet" href="/lib/educati/fonts/fontawesome/css/all.css">
    <link rel="stylesheet" href="/lib/educati/fonts/themify-icons/css/themify-icons.css">


    <!-- stylesheet-->
    <link rel="stylesheet" href="/lib/educati/css/vendors.bundle.css">
    <link rel="stylesheet" href="/lib/educati/css/style.css">
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/common.css" />

</head>

<body>


    <header class="site-header bg-dark text-white-0_5">
        <div class="container">
            <div class="row align-items-center justify-content-between mx-0">
                <ul class="list-inline d-none d-lg-block mb-0">
                </ul>
                <ul class="list-inline mb-0">
                </ul>
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mr-0 p-md-3 p-2 border border-white-0_1">
                        <a data-toggle="modal" data-target="#modal__large" style="cursor:pointer">Kaydol</a>
                    </li>
                </ul>
            </div> <!-- END END row-->
        </div> <!-- END container-->
    </header><!-- END site header-->





    <div class="site-search">
        <div class="site-search__close bg-black-0_8"></div>
        <form class="form-site-search" action="#" method="POST">
            <div class="input-group">
                <input type="text" placeholder="Search" class="form-control py-3 border-white" required="">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit"><i class="ti-search"></i></button>
                </div>
            </div>
        </form>
    </div> <!-- END site-search-->



    <section class="padding-y-100 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow-v2">
                        <div class="card-header border-bottom text-center">
                            <h4 class="mt-4">
                                E-Öğrenme Modülü - Giriş
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="text-center p-4">
                                <img src="~/images/logo.png" />
                            </div>
                            <form method="POST" asp-controller="Auth" asp-action="Index" class="px-lg-4">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <span class="text-danger">@ViewData["msg"]</span>
                                <div class="input-group input-group--focus mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white ti-email"></span>
                                    </div>
                                    <input asp-for="UserName" class="form-control border-left-0 pl-0" placeholder="Eposta">
                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <div class="input-group input-group--focus mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white ti-lock"></span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control border-left-0 pl-0" placeholder="Şifre">
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="d-md-flex justify-content-between my-4">
                                    <label class="ec-checkbox check-sm my-2 clearfix">
                                        <input asp-for="RememberMe" type="checkbox" checked>
                                        <span class="ec-checkbox__control"></span>
                                        <span class="ec-checkbox__lebel">Beni hatırla</span>
                                    </label>
                                    <a class="text-primary my-2 d-block" style="cursor:pointer" data-toggle="modal" data-target="#modal__large2">Şifremi Unuttum</a>
                                </div>
                                <button class="btn btn-block btn-primary">Giriş</button>
                                <p class="my-5 text-center">
                                    Hesabınız yok mu? <a class="text-primary" style="cursor:pointer" data-toggle="modal" data-target="#modal__large">Kaydol</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- END row-->
        </div> <!-- END container-->
    </section>

    <!--Modal Sign Up-->
    <div class="modal fade show" id="modal__large" tabindex="-1" role="dialog" aria-labelledby="modal__large" style="display: none; padding-right: 17px;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kayıt Formu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="ti-close font-size-14"></i>
                    </button>
                </div>
                <div class="modal-body py-4">
                    <form>
                        <span class="text-danger m-1">*Lütfen tüm alanları doldurunuz</span>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">İsim:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Soyisim:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="surname">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Ünvan:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Email:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Telefon:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="phone">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Tc No:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="tcno">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Meslek: </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="job">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Adres: </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="address">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="recipient-name" class="col-form-label col-sm-2">Kurum:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="institute">
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer py-4">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-outline-primary" id="btn-signup">Kaydol</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal Forgot-->
    <div class="modal fade show" id="modal__large2" tabindex="-1" role="dialog" aria-labelledby="modal__large2" style="display: none; padding-right: 17px;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Şifremi Unuttum</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="ti-close font-size-14"></i>
                    </button>
                </div>
                <div class="modal-body py-4">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Email:</label>
                            <input type="text" class="form-control" id="email_forgot">
                        </div>
                    </form>
                </div>
                <div class="modal-footer py-4">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-outline-primary" id="btn-forgot">Şifre Gönder</button>
                </div>
            </div>
        </div>
    </div>



    <footer class="site-footer" style="overflow:hidden">
        <div class="footer-bottom bg-black-0_9 py-5 text-center">
            <div class="container">
                <p class="text-white-0_5 mb-0">&copy; 2020 &nbsp;<a href="http://bilimselbilisim.com/" target="_blunk"><img src="~/images/bilimselbilisim.png" style="width:200px" /></a></p>
            </div>
        </div>  <!-- END footer-bottom-->
    </footer> <!-- END site-footer -->


    <div class="scroll-top">
        <i class="ti-angle-up"></i>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="/lib/educati/js/vendors.bundle.js"></script>
    <script src="/lib/educati/js/scripts.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/authindex.js"></script>
</body>
</html>