@using Elearning.Utility;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Öğrenme Modülü</title>

    <link rel="shortcut icon" href="~/icon.ico">

    <!--Google fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Maven+Pro:400,500,700%7CWork+Sans:400,500">

    <!-- Icon fonts -->
    <link rel="stylesheet" href="~/lib/educati/fonts/fontawesome/css/all.css">
    <link rel="stylesheet" href="~/lib/educati/fonts/themify-icons/css/themify-icons.css">

    <style>
        .sortable-handler {
            touch-action: manipulation;
        }
    </style>
    <!-- stylesheet-->
    <link rel="stylesheet" href="~/lib/educati/css/vendors.bundle.css">
    <link rel="stylesheet" href="~/lib/educati/css/style.css">
    <link rel="stylesheet" href="~/css/common.css">
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
</head>
<body>

    <header class="site-header bg-dark text-white-0_5">
        <div class="container">
            <div class="row align-items-center justify-content-between mx-0">
                <ul class="list-inline d-none d-lg-block mb-0">
                    <li class="list-inline-item mr-3">
                        <div class="d-flex align-items-center">
                            <i class="ti-email mr-2"></i>
                            <a href="mailto:@SD.Mail">@SD.Mail</a>
                        </div>
                    </li>
                    <li class="list-inline-item mr-3">
                        <div class="d-flex align-items-center">
                            <i class="ti-headphone mr-2"></i>
                            <a href="tel:@SD.tel">@SD.tel</a>
                        </div>
                    </li>
                </ul>
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mr-0 p-md-3 p-2 border border-white-0_1">
                        <a asp-controller="Auth" asp-action="Logout">Çıkış</a>
                    </li>
                </ul>
            </div> <!-- END END row-->
        </div> <!-- END container-->
    </header><!-- END site header-->


    <nav class="ec-nav sticky-top bg-white">
        <div class="container">
            <div class="navbar p-0 navbar-expand-lg">
                <div class="navbar-brand">
                    <a class="logo-default" asp-controller="Home" asp-action="Index"><img alt="ASYOD" src="~/images/logo.png"></a>
                </div>
                <span aria-expanded="false" class="navbar-toggler ml-auto collapsed" data-target="#ec-nav__collapsible" data-toggle="collapse">
                    <div class="hamburger hamburger--spin js-hamburger">
                        <div class="hamburger-box">
                            <div class="hamburger-inner"></div>
                        </div>
                    </div>
                </span>
                <div class="collapse navbar-collapse when-collapsed" id="ec-nav__collapsible">
                    <ul class="nav navbar-nav ec-nav__navbar ml-auto">

                        <li class="nav-item nav-item__has-dropdown">
                            <a class="nav-link" asp-controller="Course" asp-action="Index"> Tüm Kurslar </a>
                        </li>

                        <li class="nav-item nav-item__has-dropdown">
                            <a class="nav-link" asp-controller="MyCourse" asp-action="Index"> Kurslarım </a>
                        </li>

                        <li class="nav-item nav-item__has-dropdown">
                            <a class="nav-link" asp-controller="Account" asp-action="Index"> Hesabım </a>
                        </li>

                        <li class="nav-item nav-item__has-megamenu">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                    </ul>
                </div>
                
            </div>
        </div> <!-- END container-->
    </nav> <!-- END ec-nav -->


    @RenderBody()

    <footer class="site-footer">
        <div class="footer-bottom bg-black-0_9 py-5 text-center">
            <div class="container">
                <p class="text-white-0_5 mb-0">&copy; 2020 &nbsp;<a href="http://bilimselbilisim.com/" target="_blunk"><img src="~/images/bilimselbilisim.png" style="width:200px" /></a></p>
            </div>
        </div>  <!-- END footer-bottom-->
    </footer> <!-- END site-footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/educati/js/vendors.bundle.js"></script>
    <script src="~/lib/educati/js/scripts.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
