@model Elearning.Models.User
@{
    ViewData["Title"] = "Hesap Bilgileri";
}
<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap-table/bootstrap-table.min.css" />
    <div class="padding-y-80 bg-cover" data-dark-overlay="6">
        <div class="container">
            <h2 class="text-white">
                Hesap Bilgilerim
            </h2>
            <ol class="breadcrumb breadcrumb-double-angle text-white bg-transparent p-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item"> Hesap</li>
            </ol>
        </div>
    </div>

    <section class="paddingTop-50 paddingBottom-120 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mt-4">
                    <div class="card shadow-v1">
                        <div class="card-header text-center border-bottom pt-5 mb-4">
                            <h4 id="txt_name">
                                @Model.Name @Model.Surname
                            </h4>
                            <p id="txt_title">
                                @Model.Title
                            </p>
                        </div>
                        <div class="card-body border-bottom">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <span class="d-block">Kullanıcı adı:</span>
                                    <span class="h6" id="txt_username">@Model.UserName</span>
                                </li>
                                <li class="mb-3">
                                    <span class="d-block">Telefon:</span>
                                    <span class="h6" id="txt_phone">@Model.Phone</span>
                                </li>
                                <li class="mb-3">
                                    <span class="d-block">Adres:</span>
                                    <span class="h6" id="txt_address">@Model.Address</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div> <!-- END col-md-4 -->
                <div class="col-lg-8 mt-4">
                    <div class="card shadow-v1 padding-30">
                        <ul class="nav tab-line tab-line border-bottom mb-4" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active show" data-toggle="tab" href="#Tabs_1-5" role="tab" aria-selected="false">
                                    Bilgilerim
