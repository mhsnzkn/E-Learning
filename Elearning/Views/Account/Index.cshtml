                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="Tabs_1-5" role="tabpanel">
                                
                                <div class="border-bottom mb-4 pb-4">
                                    <h4 class="mb-4">
                                        Bilgilerimi Güncelle
                                    </h4>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">İsim</label>
                                        <div class="col-md-9">
                                            <input asp-for="Name" class="form-control form1">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Soyisim</label>
                                        <div class="col-md-9">
                                            <input asp-for="Surname" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Ünvan</label>
                                        <div class="col-md-9">
                                            <input asp-for="Title" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Tc No</label>
                                        <div class="col-md-9">
                                            <input asp-for="TcNo" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Email</label>
                                        <div class="col-md-9">
                                            <input asp-for="UserName" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Telefon</label>
                                        <div class="col-md-9">
                                            <input asp-for="Phone" type="tel" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Meslek</label>
                                        <div class="col-md-9">
                                            <input asp-for="Job" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Kurum</label>
                                        <div class="col-md-9">
                                            <input asp-for="Institute" class="form-control form1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Adres</label>
                                        <div class="col-md-9">
                                            <input asp-for="Address" class="form-control form1">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-primary m-2" id="upd_account" disabled>Bilgileri Güncelle</button>
                                    </div>
                                </div>

                                <div class="border-bottom mb-4 pb-4">
                                    <h4 class="mb-4">
                                        Güvenlik Ayarları
                                    </h4>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Mevcut Şifre</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control form2" id="currentpass">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Yeni Şifre</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control form2" id="newpass1">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-dark">Yeni Şifre (Tekrar)</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control form2" id="newpass2">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-primary m-2" id="upd_pass" disabled>Şifreyi Güncelle</button>
                                    </div>
                                </div>

                            
